generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int         @id @default(autoincrement())
  email     String      @unique @db.VarChar(64)
  avatar    String      @default("https://cdn.pupi.vn/images/teacher/teacher-badges/silver-badge.webp") @db.VarChar(128)
  mobile    Decimal     @unique @db.Decimal
  bio       String?
  gender    Int         @default(0)
  firstName String      @db.VarChar(36)
  lastName  String?     @db.VarChar(36)
  password  String      @db.VarChar(128)
  createdAt Decimal     @db.Decimal
  updatedAt Decimal     @db.Decimal
  isDeleted Int
  Extension Extension[]
}

model Extension {
  extension_id Int    @id @default(autoincrement())
  name         String
  state        Int
  createdAt    Int
  updatedAt    Int
  isDeleted    Int
  userUser_id  Int?
  createdBy    User?  @relation(fields: [userUser_id], references: [user_id])
}
